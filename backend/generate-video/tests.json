{
  "tests": [
    {
      "name": "OPTIONS request for CORS",
      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200,
      "expectedBody": "",
      "bodyMatcher": "exact"
    },
    {
      "name": "POST without prompt returns error",
      "method": "POST",
      "path": "/",
      "body": {},
      "expectedStatus": 400,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "POST with prompt initiates generation",
      "method": "POST",
      "path": "/",
      "body": {
        "prompt": "Beautiful sunset over ocean waves"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "videoUrl": "string",
        "prompt": "string"
      },
      "bodyMatcher": "partial"
    }
  ]
}
